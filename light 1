#include <Adafruit_Sensor.h>

#include <Wire.h>

#include <BH1750.h>
 
BH1750 lightMeter;
 
void setup(){
   lightMeter.begin();
  Serial.begin(9600);
    Wire.begin(D2,D1);
}
 
void loop() {
  float l = lightMeter.readLightLevel();
  Serial.print("Light: ");
  Serial.print(l);
  Serial.println(" lx");
  delay(1000);
}
